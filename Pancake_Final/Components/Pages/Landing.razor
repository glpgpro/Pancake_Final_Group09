@code {
    private async Task ConfirmAndRedirect()
    {
        // Show a confirmation dialog
        var isConfirmed = await JSRuntime.InvokeAsync<bool>("confirm", new object[] { "Please Register First!" });

        if (isConfirmed)
        {
            // Redirect to the register page
            NavigationManager.NavigateTo("/Account/Register");
        }
    }
